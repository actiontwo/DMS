{{> header}}
<div class="col-md-5 col-md-offset-4">
    <form class="form-horizontal" name="register" action="/user" method="POST">

        <div class="alert alert-dismissable alert-warning" style="display:{{#if error}} block {{else}} none{{/if}}">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
          {{error}}
        </div>
        <fieldset>
            <legend>Quick Register</legend>
            <div class="form-group">
                <label for="Email" class="col-lg-3 control-label">Email</label>

                <div class="col-lg-9">
                    <input type="text" class="form-control" id="Email" name="email" placeholder="example@example.com"
                           value="{{email_input}}" required>
                </div>
            </div>
            <div class="form-group">
                <label for="Firstname" class="col-lg-3 control-label">First Name</label>

                <div class="col-lg-9">
                    <input type="text" class="form-control" id="Firstname"
                           name="firstname" value="{{firstName_input}}"
                           required>
                </div>
            </div>
            <div class="form-group">
                <label for="Lastname" class="col-lg-3 control-label">Last Name</label>

                <div class="col-lg-9">
                    <input type="text" class="form-control" id="Lastname"
                           name="lastname" value="{{lastName_input}}" required>
                </div>
            </div>
            <div class="form-group">
                <label for="Password" class="col-lg-3 control-label">Password</label>

                <div class="col-lg-9">
                    <input type="password" class="form-control" id="Password" name="password" required>
                </div>
            </div>
            <div class="form-group">
                <label for="ConfirmPassword" class="col-lg-3 control-label">Confirm Password</label>

                <div class="col-lg-9">
                    <input type="password" class="form-control" id="ConfirmPassword" name="confirmPassword" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary btn-register">Register</button>
                </div>
            </div>
        </fieldset>
        <p>
            <a href="/forgetPassword">
                <ins>Forgot Password</ins>
            </a>
            <a href="/login">
                <ins>Login</ins>
            </a>
        </p>
    </form>
</div>
{{> footer}}