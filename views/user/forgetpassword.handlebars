{{> header}}
    <div class="rg-box-input">
        <h3>Forgot Password</h3>
        <p class="notification">{{notification}}</p>
        <form name="register" action="/resetPassword" method="get">
            <label>Email: </label>
            <input type="email" id="Email" name="email"
                   placeholder="Email" required/>
            <br/>
            <button type="submit"
                    class="btn-register btn-black">Submit
            </button>
            <input type="hidden" value="reset" name="require"/>
        </form>
        <div class="link">
            <a href="/registerUser">
                <ins>Register</ins>
            </a>,
            <a href="/login">
                <ins>Login</ins>
            </a>
        </div>
    </div>

{{> footer}}