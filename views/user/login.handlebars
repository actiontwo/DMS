{{> header}}
<div class="col-md-5 col-md-offset-4">
    <form class="form-horizontal" name="login" action="/checkUserLogin" method="POST">
        <div class="alert alert-dismissable alert-danger" style="display:{{#if error}} block {{else}} none{{/if}}">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
          {{error}}
        </div>

        <fieldset>
            <legend>Login </legend>
            <div class="form-group">
                <label for="Email" class="col-lg-2 control-label">Email</label>

                <div class="col-lg-10">
                    <input type="text" class="form-control" id="Email" name="email" placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <label for="Password" class="col-lg-2 control-label">Password</label>

                <div class="col-lg-10">
                    <input type="password" class="form-control" id="Password" name="password" placeholder="Password">

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="checkbox-remember" name="remember"> Remember me
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary btn-register">Login</button>
                </div>
            </div>
        </fieldset>
        <p>
            <a href="/forgetPassword">
                <ins>Forgot Password</ins>
            </a>
            <a href="/registerUser">
                <ins>Register Account</ins>
            </a>
        </p>
    </form>
</div>
{{> footer}}