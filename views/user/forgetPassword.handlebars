{{> header}}
<div class="container">
    <header>
        <div class="logo">
            <figure>
                <img src="images/logo.png">
            </figure>
            <span>Meal Resitration System</span>
        </div>
        <div class="clear-fix"></div>
    </header>

    <div class="content">
        <div class="rg-box-input">
            <h3>Forgot Password</h3>
          <p class="notification">{{notification}}</p>
            <form name="register" action="/resetPassword" method="get">
                <label>Email: </label>
                <input type="email" id="Email" name="email"
                       placeholder="Email" required/>
                <br/>
                <button type="submit"
                        class="btn-register btn-black">Register
                </button>
                <input type="hidden" value="reset" name="require"/>
            </form>
            <div class="link">
                <a href="/registerUser"><ins>Register</ins></a>,
                <a href="/login"><ins>Login</ins></a>
            </div>
        </div>
    </div>
</div>

{{> footer}}