<body>
<div class="container">
    <header>
      {{#if user}}
          <div class="userInfo">
              <span>Welcome : </span>
              <a href="#userProfile" id="user-account">{{user}}</a>
              ,
              <a href="/logout" id="btn-log">
                  <ins>{{status}}</ins>
              </a>
          </div>
      {{/if}}
        <div class="clearfix"></div>

        <div class="logo">
            <figure>
                <img src="images/logo.png">
            </figure>
        </div>
      {{#if menu}}
          <div class="navbar navbar-inverse">
              <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand">DMS</a>
              </div>
              <div class="navbar-collapse collapse navbar-inverse-collapse">
                  <ul class="nav navbar-nav">
                      <li><a href="/">Register Meal</a></li>
                      <li><a href="#menu">Menu</a></li>
                      <li><a href="#deposit">Deposit</a></li>
                      <li><a href="#suggest">Suggest</a></li>
                      <li><a href="#mealHistory">Meal History</a></li>
                    {{#if admin}}
                      <li><a href="#manager">Admin</a></li>
                    {{/if}}
                  </ul>
              </div>
          </div>
      {{/if}}
    </header>
    <section class="main" id="main"></section>
    <section class="subMain" id="subMain"></section>